<!DOCTYPE html>
<html>
<head>
<title>Movie Info</title>
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
<link rel="stylesheet" href="https://bootswatch.com/4/cyborg/bootstrap.min.css">
<link rel="stylesheet" href="css/style.css">
<script
    src="https://code.jquery.com/jquery-3.3.1.min.js"
    integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8="
    crossorigin="anonymous"></script>

    <script src="https://unpkg.com/axios/dist/axios.min.js"></script>

    <script>
    let output=``;
    let movies= "<%-movies%>";
    console.log(movies);
    $.each(movies, (index, movie) => {
        let image;
        if (movie.Poster !== "N/A")
            image = movie.Poster;
        else
            image = "https://thumb.ibb.co/kJgmxz/default_IMG.png";
        output += `
            <div class="col-md-3">
                <div class="movieBox text-center">
                    <a onclick="movieSelected('${movie.imdbID}')" href="#"><img src="${image}"> </a>
                    <h5 class="movieTitle">${movie.Title}</h5>
                </div>
            </div>
        `;
    });
    $('#movies').html(output);
    </script>
</head>
<body>

    <nav class="navbar navbar-default">
            <div class="navbar-header">
                <a class="navbar-brand" href="/">
                    <i class="fa fa-film" aria-hidden="true"></i> &nbsp; Movie Collection
                </a>
            </div>
    </nav>

    <h3 id="headerDisplay" class="text-left">Click on a Movie/TV Show</h3>

    <div class="container">
        <div id="movies" class="row">
        </div>
    </div>

</body>
</html>
